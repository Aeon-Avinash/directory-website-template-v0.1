---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import FeaturedListings from '../components/FeaturedListings.astro';
import LatestListings from '../components/LatestListings.astro';
import CategoryFilter from '../components/CategoryFilter.astro';
import CollectionsSection from '../components/CollectionsSection.astro';
import ResourcesPreview from '../components/ResourcesPreview.astro';
import CTASection from '../components/CTASection.astro';
import Newsletter from '../components/Newsletter.astro';
---

<BaseLayout title="SoftwareDirectory - Find the Best Software Tools and Products" description="Discover and compare the best software tools and products for your needs. Browse our comprehensive directory of development tools, productivity apps, and more.">
  <Hero />
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col lg:flex-row gap-8">
      <aside class="lg:w-1/4">
        <CategoryFilter />
      </aside>
      <div class="lg:w-3/4">
        <FeaturedListings />
        <LatestListings />
      </div>
    </div>
  </div>
  <CollectionsSection />
  <ResourcesPreview />
  <CTASection />
  <Newsletter />
</BaseLayout>