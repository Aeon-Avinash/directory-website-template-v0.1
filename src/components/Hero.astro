<section class="py-20 overflow-hidden">
  <div class="container mx-auto px-4">
    <div class="flex flex-col lg:flex-row items-center">
      <div class="lg:w-1/2 mb-8 lg:mb-0">
        <h1 class="text-5xl md:text-6xl font-bold mb-6 text-transparent bg-clip-text bg-gradient-to-r from-primary-500 to-secondary-500">Discover the next SaaS product today.</h1>
        <p class="text-xl mb-8 text-gray-600 dark:text-gray-300">Find the perfect software tools to boost your productivity and streamline your workflow.</p>
        <form id="heroSearchForm" class="flex flex-col sm:flex-row gap-4">
          <input
            type="text"
            name="query"
            placeholder="Search for tools, categories, or features..."
            class="flex-grow px-4 py-3 rounded-full border-2 border-primary-300 focus:outline-none focus:ring-2 focus:ring-primary-300 bg-white dark:bg-gray-800"
          />
          <button type="submit" class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-6 py-3 rounded-full hover:from-primary-600 hover:to-secondary-600 transition duration-300 transform hover:scale-105">
            Search
          </button>
        </form>
      </div>
      <div class="lg:w-1/2 relative">
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-primary-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-secondary-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-2000"></div>
        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-72 h-72 bg-pink-300 rounded-full mix-blend-multiply filter blur-xl opacity-70 animate-blob animation-delay-4000"></div>
        <img src="/hero-illustration.svg" alt="Software tools illustration" class="w-full relative z-10 float" />
      </div>
    </div>
  </div>
</section>

<script>
  const heroSearchForm = document.getElementById('heroSearchForm');
  heroSearchForm.addEventListener('submit', (e) => {
    e.preventDefault();
    const query = new FormData(heroSearchForm).get('query');
    window.location.href = `/directory?search=${encodeURIComponent(query)}`;
  });
</script>