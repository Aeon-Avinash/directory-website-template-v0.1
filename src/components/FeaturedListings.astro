---
const featuredListings = [
  { id: 1, name: 'SuperDev IDE', category: 'Development', rating: 4.8, logo: '/logos/superdev.svg' },
  { id: 2, name: 'TaskMaster Pro', category: 'Productivity', rating: 4.7, logo: '/logos/taskmaster.svg' },
  { id: 3, name: 'DesignWizard', category: 'Design', rating: 4.9, logo: '/logos/designwizard.svg' },
];
---

<section class="mb-20">
  <h2 class="text-4xl font-bold mb-10 text-center">Featured Software Tools</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 card-section">
    {featuredListings.map((listing) => (
      <div class="bg-white dark:bg-gray-800 rounded-2xl shadow-md p-6 flex flex-col card transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center mb-4">
          <img src={listing.logo} alt={`${listing.name} logo`} class="w-16 h-16 mr-4 rounded-full" />
          <div>
            <h3 class="text-2xl font-semibold">{listing.name}</h3>
            <p class="text-primary-600 dark:text-primary-400">{listing.category}</p>
          </div>
        </div>
        <div class="flex items-center mb-4">
          <span class="text-yellow-400 mr-1">â˜…</span>
          <span>{listing.rating.toFixed(1)}</span>
        </div>
        <a href={`/directory/${listing.category.toLowerCase()}/${listing.id}`} class="mt-auto bg-gradient-to-r from-primary-500 to-secondary-500 text-white px-6 py-3 rounded-full hover:from-primary-600 hover:to-secondary-600 transition duration-300 text-center transform hover:scale-105">View Details</a>
      </div>
    ))}
  </div>
</section>